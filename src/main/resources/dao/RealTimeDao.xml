    <select id="getSingleLineRealTimeStationFlow" resultType="com.boot.demo.entity.StationRealTimeEntity">
        select s_1.station_name, flow_in,flow_out
        from s_1 join station on s_1.station_name=station.station_name
        where line_name = #{line} and time_stamp=#{time}
    </select>


    <select id="getSingleLineRealTimeTrainFlow" resultType="com.boot.demo.entity.TrainsRealTimeEntity">
        select * from s_2 join station on next_station=station_name
        where line_name = #{line} and time_stamp=#{time}
    </select>

</mapper>