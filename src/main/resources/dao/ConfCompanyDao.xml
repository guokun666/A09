<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.boot.demo.dao.ConfCompanyDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.boot.demo.entity.ConfCompanyEntity" id="confCompanyMap">
        <result property="companyId" column="company_id"/>
        <result property="companyName" column="company_name"/>
        <result property="companyTypeId" column="company_type_id"/>
        <result property="companyTypeName" column="company_type_name"/>
        <result property="createUserid" column="create_userId"/>
        <result property="createTime" column="create_time"/>
        <result property="updateUserid" column="update_userId"/>
        <result property="updateTime" column="update_time"/>
        <result property="isDelete" column="is_delete"/>
        <result property="remark" column="remark"/>
    </resultMap>

    <select id="countByWhere" resultType="java.lang.Long">
        SELECT COUNT(1) FROM conf_company
        <where>
            <if test="companyName != null and companyName != '' ">
                AND company_name LIKE CONCAT("%", #{companyName}, "%")
            </if>
            <if test="createUserId != null and createUserId != '' ">
                AND create_userId = #{createUserId}
            </if>
        </where>
    </select>

    <select id="selectByWhere" resultMap="confCompanyMap">
        SELECT * FROM conf_company
        <where>
            <if test="companyName != null and companyName != '' ">
                AND company_name LIKE CONCAT("%", #{companyName}, "%")
            </if>
            <if test="createUserId != null and createUserId != '' ">
                AND create_userId = #{createUserId}
            </if>

        </where>
        ORDER BY create_time DESC LIMIT ${(pageNo-1)*pageSize}, ${pageSize}
    </select>

    <select id="getByCompanyId" resultType="com.boot.demo.entity.ConfCompanyEntity">
        SELECT * FROM conf_company WHERE company_id = #{companyId} LIMIT 1
    </select>
<!--<select id="listByCompanyName"></select>-->


</mapper>