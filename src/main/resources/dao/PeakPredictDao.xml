<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.boot.demo.dao.PeakPredictDao">

	<!-- 前面是实体的字段名字，这个映射还要仔细问问 -->
    <resultMap type="com.boot.demo.entity.PeakPredictEntity" id="PeakPreditcMap">

        <result property="line" column="line"/>
        <result property="flow_in" column="flow"/>
        <result property="flow_in" column="flow_in"/>
        <result property="flow_out" column="flow_out"/>
        <result property="time" column="time_attribute"/>
    </resultMap>


    <select id="getCityTime" resultMap="PeakPreditcMap">
        SELECT flow_in,flow_out ,line
        FROM y_3 WHERE time_attribute= #{time}
    </select>
    <select id="getPeakMoring" resultMap="PeakPreditcMap">
        SELECT flow ,line
        FROM y_3 WHERE time_attribute= #{time} order by flow desc limit 1
    </select>
    <select id="getPeakEvening" resultMap="PeakPreditcMap">
        SELECT flow ,line
        FROM y_3 WHERE time_attribute= #{time} order by flow desc limit 1
    </select>

</mapper>